<div class="headline-bg contact-headline-bg">
</div><!--//headline-bg-->


<!-- ******Contact Section****** --> 
<section class="contact-section section section-on-bg">
    <div class="container">
        <h2 class="title text-center">Contact Us</h2>
        <p class="intro text-center">Weâ€™d love to hear from you. Let us know if you have any questions, concerns, or if you just want to say hi.</p>
        <form id="contact-form" class="contact-form" method="post" action="">                    
            <div class="row text-center">
                <div class="contact-form-inner col-md-8 col-sm-12 col-xs-12 col-md-offset-2 col-sm-offset-0 xs-offset-0">
                    <div class="row">  

                        <%= simple_form_for Contact.new(params[:contact]), html: {id: "contactForm"}, remote: true do |f| %>                                  
                            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                <label class="sr-only" for="cname">Your name</label>
                                <%= f.input :name, required: true, placeholder: 'Your Name', class: 'form-control', label: false %>

                            </div>                    
                            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                <label class="sr-only" for="cemail">Email address</label>
                                <%= f.input :email, required: true, placeholder: 'Your Email', class: 'form-control', label: false %>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                <label class="sr-only" for="cmessage">Your message</label>
                                <%= f.input :message, as: :text, required: false, input_html: {rows: 12}, placeholder: 'Enter your message here', class: 'form-control', label: false %>
                            </div>
                             <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                <%= f.button :submit, 'Send Message', class: 'btn btn-block btn-cta btn-cta-primary', id: 'ContactSubmit', data: { disable_with: "Sending..." } %>
                            </div>  
                        <% end %>                         
                    </div><!--//row-->
                </div>
            </div><!--//row-->
            <div id="form-messages"></div>
        </form><!--//contact-form-->
    </div><!--//container-->
</section><!--//contact-section-->

