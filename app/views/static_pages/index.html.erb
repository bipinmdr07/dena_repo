<!-- Header -->
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                             
                <!-- <img class="img-responsive" src="img/profile.png" alt=""> -->
                <div class="intro-text">
                  
                    <% if notice.present? %>
                      <p class="alert alert-info"><%= notice %></p>
                    <% end %>
                    <% if alert.present? %>
                      <p class="alert alert-danger"><%= alert %></p>
                    <% end %>

                    <span class="name">Start Coding</span>
                    <hr class="star-light">
                    <span class="skills">HTML/CSS - Ruby on Rails - JavaScript/jQuery - Git/Github</span>
                    
                    <div class = "join-buttons">
                      <%= link_to 'START CODING NOW', new_user_registration_path, class: "btn btn-danger btn-lg" %>
                      <%= link_to 'LOG IN', new_user_session_path, class: "btn btn-primary btn-lg" %>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</header>

<!-- Skills Grid Section -->
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Skills You Will Learn</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
          <% skills.each do |skill| %>
            <div class="col-sm-4 portfolio-item text-center">
                <%= image_tag skill[2], class: 'skill_logo' %>
                <h3><%= skill[0] %></h3>
                <p><%= skill[1] %></p>
            </div>
          <% end %>
        </div>
    </div>
</section>

