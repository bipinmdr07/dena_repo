<%= render "shared/flash_messages" %>

<div class="row">
  <div class="col-xs-12">
    <h1 class="mentee_title text-center"><span class="back_to_dashboard"><%= link_to '< Back to Dashboard', dashboard_path, class: 'btn btn-back btn-default' %></span> Your Mentees</h1>
  </div>
</div>


<% @mentees.each do |mentee| %>
<div class="col-xs-12 col-sm-4">
  <div class="mentee-panel text-center">
    <%= image_tag mentee.avatar, class: 'prof_pic_sm' %>
    <h3><%= mentee.name %></h3>
    <h5><%= display_date @mentee.try(:start_date) %></h5>
    <h5><%= display_date @mentee.try(:graduation_date) %></h5>
    <h5><%= pluralize mentee.remaining_mentor_sessions, "mentor session" %> left</h5>
    <%= link_to "View Mentor Logs", mentee_mentor_sessions_path(mentee_id: mentee.id) %>
  </div>
</div>
<% end %>
