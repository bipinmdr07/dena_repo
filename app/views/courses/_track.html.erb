<div class="col-xs-12 col-md-4">
  <div class="track-container">
    <%= link_to get_lesson_url_string(track.courses.first, 1) do %>
      <div class="track">
        <div class="track-number">
          Track <%= track.number %>
        </div>
        <div class="track-title">
          <h3><%= track.title %></h3>
        </div>

        <div class="track-description">
          <p><%= track.description %></p>
        </div>

        <div class="track-progression">
          <% unless current_user.has_access_to?(track.courses.first.underscore.chomp("_lesson")) %>
            <button class="btn btn-sm btn-cta-primary btn-track">Locked</button>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>