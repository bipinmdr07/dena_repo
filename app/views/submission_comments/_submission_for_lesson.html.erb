<div class = "forum_section submissions">

<h1>Submissions</h1>
<p>
	Submit your work here and get feedback!
</p>

<% submission = Submission.find_by(name: name) %>

	<%= link_to 'Submit Your Work', new_submission_submission_comment_path(submission_id: submission, lesson: lesson), class: 'btn btn-danger', locals: {lesson: lesson} %>

	<br>
	<br>

		<% submission.submission_comments.where(lesson: lesson).order("created_at DESC").each do |comment| %>
			<h4><%= link_to comment.title, submission_submission_comment_path(comment.submission_id, comment.id) %> <span class = "comment_list">by <%= submission_comment_owner(comment) %></span> <%= '<i class="fa fa-check-circle" style="margin-left: 5px; color: #5cb85c;" aria-hidden="true"></i>'.html_safe if comment.approved %></h4>
		<% end %>


</div>