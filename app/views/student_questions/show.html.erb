<div class="row">
  <div class="col-xs-12">
    <h1 class="mentee_title text-center"><span class="back_to_dashboard"><%= link_to '<i class="fa fa-caret-left" aria-hidden="true"></i> Back to Student Questions'.html_safe, student_questions_path, class: 'btn btn-back btn-default' %></span><%= @student_question.title %></h1>
  </div>
</div>

<div class="devise_box forum_container">

  <%= render "shared/flash_messages" %>

  <div class="row">
    <div class="col-xs-12 col-sm-2">
      <%= image_tag @user.avatar, class: 'prof_pic_forum' %>
      <div class="prof_name">
        <%= @user.name %>
      </div>
      <div class="prof_badge">
        <% if @user.mentor %>
          <label class="label label-default">TECHRISE Mentor</label>
        <% end %>
      </div>
      <div class="edit_post_links">
        <% if current_user.id == @student_question.user_id || current_user.admin %>
          <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit'.html_safe, edit_student_question_path(@student_question.id), class: 'btn btn-sm btn-warning'  %>
          <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i> Delete'.html_safe, student_question_path(@student_question.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-warning' %>
        <% end %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-10">
      <small><%= display_date(@student_question.created_at) %></small>
      <br>
      <%= sanitize raw(@student_question.answer) %>
      <p class = "pull-right" ></p>
      
    </div>
  </div>

  <hr>

        
  <% @student_question.comments.order("created_at ASC").each do |comment| %>
    <% user = User.find(comment.user_id) %>
    <div class="row">
      <div class="col-xs-2">
        <%= image_tag user.avatar, class: 'prof_pic_forum' %>
        <div class="prof_name">
          <%= user.name %>
        </div>
        <div class="prof_badge">
          <% if user.mentor %>
            <label class="label label-default">TECHRISE Mentor</label>
          <% end %>
        </div>
        <div class="edit_post_links">
          <% if current_user.id == comment.user_id || current_user.admin %>
            <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit'.html_safe, edit_student_question_comment_path(@student_question.id, comment.id), class: 'btn btn-sm btn-warning' %>
            <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i> Delete'.html_safe, student_question_comment_path(@student_question.id, comment.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-warning' %>
          <% end %>
        </div>
      </div>

      <div class="col-xs-10">
        <small><%= display_date(comment.created_at) %></small>
        <br>
        <%= sanitize raw(comment.content) %>
      </div>
    </div>
    <hr>
  <% end %>



  <%= simple_form_for :comment, url: student_question_comments_path(params[:id]), method: :post, input_html: {class: 'form-horizontal'} do |f|  %>
    <div data-no-turbolink>
      <%= f.cktext_area :content, label: 'Comment', ckeditor: {language: 'us'}, required: true, class: 'ckeditor' %>
    </div>
    <%= f.input :user_id, as: :hidden, input_html:{ value: current_user.id } %>

    <br>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>

</div>
