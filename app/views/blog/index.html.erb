<section class="featured-blog-posts section">       
       
            <div class="flexslider blog-slider">
                <ul class="slides">
                  <% 4.times do |i| %>
                    <% break if @posts[i].nil? %>
                    <li class="slide slide-<%= i %>" style="background: #253340 url(<%= @posts[i].featured_image %>) no-repeat 50% top;">
                        <div class="flex-caption container">
                            <h3 class="title"><%= link_to @posts[i].title, post_path(@posts[i].slug) %></h3>
                            <div class="meta"><%= display_date(@posts[i].created_at) %></div>
                            <%= link_to 'Read more &rarr;'.html_safe, post_path(@posts[i].slug), class: "more-link" %>
                        </div><!--//flex-caption-->
                    </li>
                    
                  <% end %>
                </ul><!--//slides-->
            </div><!--//flexslider-->
                    
        </section><!--//featured-blog-posts-->
        
        <!-- ******BLOG LIST****** --> 
        <div class="blog container">
            <div class="row">
                <div id="blog-mansonry" class="blog-list">
                  <% @posts.each do |post| %>
                    <article class="post col-md-4 col-sm-6 col-xs-12">
                        <div class="post-inner">
                            <figure class="post-thumb">
                                <%= link_to post_path(post.slug) do %>
                                  <%= image_tag post.featured_image, class: 'img-responsive' %>
                                <% end %>                            
                            </figure><!--//post-thumb-->
                            <div class="content">
                                <h3 class="post-title"><%= link_to post.title, post_path(post.slug) %></h3>
                                <div class="post-entry">
                                    <%= truncate(post.body, length: 120, escape: false) %>
                                    <%= link_to post_path(post.slug), class: 'read-more' do %>
                                      Read More <i class="fa fa-long-arrow-right"></i>
                                    <% end %>
                                </div>
                                <div class="meta">
                                    <ul class="meta-list list-inline">                                       
                                      <li class="post-time post_date date updated"><%= display_date(post.created_at) %></li>
                                      <li class="post-author"> by TECHRISE</a></li>
                                      <!-- <li class="post-comments-link">
                                          <a href="blog-single.html#comment-area"><i class="fa fa-comments"></i>8</a>
                                      </li> -->
                                  </ul><!--//meta-list-->                             
                                </div><!--meta-->
                            </div><!--//content-->
                        </div><!--//post-inner-->
                    </article><!--//post-->
                  <% end %>
                </div><!--//blog-list-->  
            </div><!--//row-->
            <div class="pagination-container text-center">
                <ul class="pagination">
                    <li class="disabled"><a href="#">&laquo;</a></li>
                    <li class="active"><a href="#">1<span class="sr-only">(current)</span></a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">&raquo;</a></li>
                </ul><!--//pagination-->
            </div><!--//pagination-container-->
        </div><!--//blog-->        
    </div><!--//wrapper-->