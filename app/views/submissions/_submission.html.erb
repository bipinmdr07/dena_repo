<ul class="question_list">
  <% user = User.find(submission.user_id) %>

  <li class="question_container">
    <div class="row">
      <div class="col-xs-10 col-sm-4">
        <%= image_tag user.avatar, class: 'community_prof_pic', style: "margin-top: 40px;" %>
      </div><!-- col-xs-12 col-sm-4 -->

      <div class="col-xs-12 col-sm-6">
        <div class="submission_content">
          <h5 class="question_container_title"><%= link_to submission.title, submission_path(submission) %></h5>
          <div class="question_container_information">
            <span class="question_container_time"><%= time_ago_in_words(submission.created_at) %> ago</span> by <span class="question_container_user"><%= user.name %></span>
          </div><!-- question_container_information -->
        </div><!-- submission_content -->
      </div><!-- col-xs-12 col-sm-2 -->

      <div class="col-xs-12 col-sm-2">
        <div class="reply_count_container">
          <div class="reply_count"><%= submission.submission_replies.count %></div>
          <div class="reply_count_label">Replies</div>
          <% if submission.approved %>
            <div class="reply_resolved text-center">
              <i class="fa fa-check" aria-hidden="true"></i>
            </div><!-- reply_resolved -->
          <% end %>
        </div><!-- reply_count_container -->
      </div><!-- col-xs-12 col-sm-2 -->
    </div><!-- row -->
  </li><!-- question_container -->
</ul><!-- question_list -->