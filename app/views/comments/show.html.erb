
	<div class="devise_box forum_container">

		<div class="back_to_lesson">
			<%= back_to_lesson %>
		</div>

		<div class="row">
			<div class="col-xs-2">
				<%= image_tag @user.avatar, class: 'prof_pic_forum' %>
				<div class="prof_name">
					<%= comment_owner(@comment) %>
				</div>
				<div class="prof_badge">
					<% if @user.mentor %>
						<label class="label label-default">TECHRISE Mentor</label>
					<% end %>
				</div>
			</div>

			<div class="col-xs-10">
				<h3><%= @comment.title %></h3>
				<small><%= display_date(@comment.created_at) %></small>
				<br>
				<%= sanitize raw(@comment.description) %>
				<p class = "pull-right" ></p>
				<br class = "clear">

				<% if current_user.admin || @comment.user_id == current_user %>
					<div id="comment_solved_form_container">
						<%= render partial: 'comment_solved_form' %>
					</div>
				<% end %>
			</div>
		</div>

		<hr>

					
		<% @comment.replies.each do |reply| %>
			<% user = User.find(reply.user_id) %>
			<div class="row">
				<div class="col-xs-2">
					<%= image_tag user.avatar, class: 'prof_pic_forum' %>
					<div class="prof_name">
						<%= reply_owner(reply) %>
					</div>
					<div class="prof_badge">
						<% if user.mentor %>
							<label class="label label-default">TECHRISE Mentor</label>
						<% end %>
					</div>
				</div>

				<div class="col-xs-10">
					<small><%= display_date(reply.created_at) %></small>
					<br>
					<%= sanitize raw(reply.content) %>
				</div>
			</div>
			<hr>
		<% end %>



		<%= simple_form_for :reply, url: forum_comment_replies_path(params[:forum_id], params[:id]), method: :post, input_html: {class: 'form-horizontal'} do |f|  %>
			<div data-no-turbolink>
				<%= f.cktext_area :content, label: 'Comment', ckeditor: {language: 'us'}, required: true %>
			</div>
			<%= f.input :user_id, as: :hidden, input_html:{ value: current_user.id } %>

			<br>
			<%= f.submit 'Submit', class: 'btn btn-primary' %>
		<% end %>

	</div>
