<%= simple_form_for :comment, url: forum_comments_path, method: :post, input_html: {class: 'form-horizontal'} do |f| %>
	<%= f.input :title, required: true %>
	<%= f.input :description, as: :text, input_html: {rows: 6}, required: true %>
	<%= f.submit 'Submit Question', class: 'btn btn-primary' %>
<% end %>