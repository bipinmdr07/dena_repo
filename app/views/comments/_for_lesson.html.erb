<% forum_for_lesson = Forum.where(chapter: chapter, lesson: lesson) %>

<%= link_to 'Ask Question', new_forum_comment_path(forum_for_lesson), class: 'btn btn-priamry' if forum_for_lesson.exists? %>
<%= link_to 'Ask Question', forums_path(forum: {chapter: chapter, lesson: lesson}), method: :post, class: 'btn btn-priamry' if forum_for_lesson.empty? %>

<br>

<% if forum_for_lesson.exists? %>
	<% forum_for_lesson.comments.each do |comment| %>
		<h4><%= link_to comment.title, comment_path(comment) %></h4>
	<% end %>
<% end %>