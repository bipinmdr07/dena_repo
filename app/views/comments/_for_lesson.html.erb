<div class = "forum_section">


<% forum_for_lesson = Forum.find_by(name: name) %>

<!-- 	<%= link_to 'Ask Question', forums_path(forum: {chapter: chapter, lesson: lesson}), method: :post, class: 'btn btn-primary' if forum_for_lesson.nil? %>
 -->

	<%= link_to 'Ask Question', new_forum_comment_path(forum_for_lesson, lesson: lesson), class: 'btn btn-primary', locals: {lesson: lesson} %>

	<br>
	<br>

		<% forum_for_lesson.comments.where(lesson: lesson).order("created_at DESC").each do |comment| %>
			<h4><%= link_to comment.title, forum_comment_path(comment.forum_id, comment.id) %> <span class = "comment_list">by <%= comment_owner(comment) %></span> <span class = "pull-right comment_list">Replies: <%= comment.replies.count %></span></h4>
		<% end %>


</div>