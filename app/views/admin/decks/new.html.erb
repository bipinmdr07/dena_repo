<div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
  <h1 class="text-center">Create Master Deck</h1>

  <%= simple_form_for @deck, url: admin_decks_path do |f| %>
    <%= f.input :title, placeholder: 'Deck Title', label: false %>
  	<%= f.submit "Create Deck", class: 'btn btn-cta-primary btn-block', data: {disable_with: "Creating deck..."} %>
  <% end %>
</div>
