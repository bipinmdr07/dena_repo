<%= link_to '< Back to Courses', courses_path %>

<h1 class="curriculum_title"><%= @current_course_title %></h1>

  <% @current_course_chapters.each_with_index do |chapter, i| %>
    <% if (i + 1) % 3 == 0 %>
      <div class = "row">
    <% end %>
    
    <div class = "col-xs-12 col-md-4">
      <div class="course_box">

        <h3 class = "underlined-header"><%= chapter.title %></h3>
        <ul class = "unindented_ul">

        <div class="course_description">
          <% @current_course_lessons.select{|lesson| lesson.chapter == chapter}.each do |lesson| %>          
            <%= link_to "<li> Lesson #{lesson.id} - #{lesson.title} #{lesson_completed(@progression_lesson_ids.include?(lesson.id))}</li>".html_safe, "/#{@current_course_link}/#{(lesson.id)}" %>
          <% end %>
        </div><!-- course_description -->
      </div><!-- course_box -->
    </div><!-- col-xs-12 col-md-4 -->

    <% if (i + 1) % 3 == 0 && i != 0 %>
      </div><!-- row -->
    <% end %>
    
    
  <% end %>
