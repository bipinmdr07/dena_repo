<h1 class="text-center" style="margin-bottom: 50px"><%= @users.count %> Admitted Students</h1>


<%= will_paginate @users, renderer: BootstrapPagination::Rails %>

<table class="table table-responsive" style="background: #fff;">
  <tr>
    <th>Start Date</th>
    <th>Graduation Date</th>
    <th>Signed In</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Package</th>    
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= display_date user.start_date %></td>
      <td><%= display_date user.graduation_date %></td>
      <td><%= distance_of_time_in_words(DateTime.now, user.current_sign_in_at) %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td><%= user.package %></td>      
      <td>
        <%= link_to 'Admin', edit_admin_user_path(user.id), class: 'btn btn-sm btn-cta btn-cta-secondary' %>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @users, renderer: BootstrapPagination::Rails %>